<fest:template xmlns:fest="http://fest.mail.ru">
    <div class="wrapper wrapper_narrow wrapper_center">
        <h1>Войти</h1>
        <h4><a href="#">Главное меню →</a></h4>
        <form class="login-form">
            <div class="login-form__field">
                <label class="login-form__label" for="js-login-form__login">Логин</label>
                <div class="login-form__error-text js-login-form__login-error"></div>
                <input type="login" class="login-form__input" id="js-login-form__login" placeholder="Логин" />
                <span class="login-form__icon glyphicon glyphicon_user"></span>
            </div>
            <div class="login-form__field">
                <label class="login-form__label" for="js-login-form__password">Пароль</label>
                <div class="login-form__error-text js-login-form__password-error"></div>
                <input type="password" class="login-form__input" id="js-login-form__password" placeholder="Пароль" />
                <span class="login-form__icon glyphicon glyphicon_asterisk"></span>
            </div>
            <button type="submit" class="login-form__button js-login-form__button">Войти</button>
        </form>
    </div>
</fest:template>
