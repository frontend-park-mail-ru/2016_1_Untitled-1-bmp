<fest:template xmlns:fest="http://fest.mail.ru">
    <div class="wrapper wrapper_narrow wrapper_center">
        <h1>Регистрация</h1>
        <div class="signup-form">
        <form>
          <div class="form-group">
            <label for="signup-form__login">Логин</label>
            <input type="text" class="form-control signup-form__login" id="signup-form__login" placeholder="Логин" />
          </div>
          <div class="form-group">
            <label for="signup-form__name">Имя</label>
            <input type="text" class="form-control signup-form__name" id="signup-form__name" placeholder="Имя" />
          </div>
          <div class="form-group">
            <label for="signup-form__email">Email</label>
            <input type="email" class="form-control signup-form__email" id="signup-form__email" placeholder="Email" />
          </div>
          <button type="submit" class="btn btn_primary btn_block signup-form__button">Готово</button>
        </form>
        </div>
        <h2><a href="#">Главное меню →</a></h2>
    </div>
</fest:template>
