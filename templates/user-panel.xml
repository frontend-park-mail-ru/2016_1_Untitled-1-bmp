<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">
    <div class="user-panel">
        <ul class="user-panel__list">
            <fest:if test="data.isAuth">
                <li class="user-panel__list-el">
                    <i class="glyphicon glyphicon_user"></i>
                    <fest:space />
                    <fest:value>data.login</fest:value>
                </li>
                <li class="user-panel__list-el">
                    <i class="glyphicon glyphicon_star"></i>
                    <fest:space />
                    <fest:value>data.score</fest:value>
                </li>
                <li class="user-panel__list-el">
                    <a href="#logout" class="js-logout">
                        <i class="glyphicon glyphicon_remove"></i>
                        <fest:space />
                        Выйти
                    </a>
                </li>
            </fest:if>
        </ul>
    </div>
</fest:template>
